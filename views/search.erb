<section class="center-vertical">
	<h1>検索フォーム</h1>
	<form>
		<form class="form-inline" action="/search">
		<input type="text" name="keyword" class="form-control"placeholder="アーティスト名">
		<input type="submit" class="form-control" value="検索">
	</form>
	<h2>検索結果</h2>
				<div class="center-hrizontal">
					<% if !@musics.empty? %>
							<% @musics.each do |music| %>
							<div class="post center-vertical">
							<img src="<%= music["artworkUrl100"] %>">
							<p><%= music["trackName"] %> </p>
							<p><%= music["collectionName"] %></p>
							<p><%= music["artistName"] %></p>
							<a href="<%= music["previewUrl"] %>">サンプル</a>
				    <form action="/new" method="post">
					<input type="text" name="comments" placeholder="コメント">

	<input type="hidden" name="artworkUrl100" value="<%= music["artworkUrl100"] %>">
	<input type="hidden" name="rackName" value="<%= music["trackName"] %>">
	<input type="hidden" name="collectionName" value="<%= music["collectionName"] %>">
	<input type="hidden" name="artistName" value="<%= music["artistName"] %>">
	<input type="hidden" name="previewUrl" value="<%= music["previewUrl"] %>">
	<input type="hidden" name="user_name" value="<%= current_user.name %>">
	<input type="hidden" name="id" value="<%= music["id"]%>">

						<input type="submit" value="投稿">
						
					</form>
						</div>
						<% end %>
						<% else %>
							<p>検索結果がありません</p>
					<% end %>
				</div>
</section>